
<!--bootstrap breadcrumbs-->
<nav aria-label="breadcrumb" role="navigation">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">@Html.ActionLink("Home", "Index")</li>
        <li class="breadcrumb-item">@Html.ActionLink("Missions", "Missions")</li>
        <li class="breadcrumb-item active" aria-current="page">Mission FAQs</li>
    </ol>
</nav>

<h2>@ViewBag.Title Mission FAQ's</h2>

<div class="row">
    <div class="col-md-6">
        <img src=@Url.Content(ViewBag.Image) class=“img-responsive” height="200px" />
    </div>
    <div class="col-md-6">
        Mission President: @ViewBag.Pres <br />
        Mission Home:<br />
            @ViewBag.Address1 <br />
            @ViewBag.Address2 <br />
            @ViewBag.Address3 <br />
        Mission Language: @ViewBag.Lang <br />
        Climate: @ViewBag.Climate <br />
        Dominant Religion: @ViewBag.Rel <br />
    </div>
</div>

<!--Question Form-->
<h2>FAQs</h2>
<p>See previously asked questions, and submit your own below. Each question is answered by 
    missionaries who served in this mission.</p>
<div class="row">
    <div class="col-md-12">
        <form>
            <div class="form-group">
                <label>Name</label>
                <input type="text" class="form-control" placeholder="First name and last initial">
            </div>
            <div class="form-group">
                <label>Your Question</label>
                <input type="text" class="form-control" placeholder="Enter question">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

<br /><br />

<div class="container">
    <div class="panel panel-default widget">
        <div class="panel-heading">
            <span class="glyphicon glyphicon-comment"></span>
            <h3 class="panel-title">
                Q&A
            </h3>
        </div>
        <div class="panel-body">
            <ul class="list-group">
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-xs-10 col-md-11">
                            <div>
                                <p>Footwear Question</p>
                                <div class="mic-info">
                                    <p>By: Michael R. on 12 Jun 2014</p>
                                </div>
                            </div>
                            <div class="comment-text">
                                <p>Do I need waterproof shoes?</p>
                            </div>
                        </div>
                    </div>
                </li>
                <li class="list-group-item reply">
                    <div class="row">
                        <div class="col-xs-10 col-md-11">
                            <div>
                                <p>RE: Footwear Question</p>
                                <div class="mic-info">
                                    <p>By: Michael E. on 12 Jun 2014</p>
                                </div>
                            </div>
                            <div class="comment-text">
                                <p>Yes, you will wear them every day!</p>
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
        <div class="col">
            <div class="panel-body">
                <form role="form">
                    <fieldset>
                        <div class="form-group">
                            <textarea class="form-control" rows="3" placeholder="Write your answer"></textarea>
                        </div>
                        <button type="submit" class="[ btn btn-success ]" data-loading-text="Loading...">Post reply</button>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>