
<!--bootstrap breadcrumbs-->
<nav aria-label="breadcrumb" role="navigation">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">@Html.ActionLink("Home", "Index")</li>
        <li class="breadcrumb-item">@Html.ActionLink("Missions", "Missions")</li>
        <li class="breadcrumb-item active" aria-current="page">Mission FAQs</li>
    </ol>
</nav>

<!--title including mission name-->
<h2>@ViewBag.Title Mission FAQ's</h2>

<div class="row">
    <div class="col-md-6">
        <!--mission flag-->
        <img src=@Url.Content(ViewBag.Image) class=“img-responsive” height="200px" />
    </div>
    <div class="col-md-6">
        <!--mission info passed from controller-->
        <strong>President:</strong> @ViewBag.Pres <br />
        <strong>Mission Home:</strong><br />
        &emsp;@ViewBag.Address1 <br />
        &emsp;@ViewBag.Address2 <br />
        &emsp;@ViewBag.Address3 <br />
        <strong>Mission Language:</strong> @ViewBag.Lang <br />
        <strong>Climate:</strong> @ViewBag.Climate <br />
        <strong>Dominant Religion:</strong> @ViewBag.Rel <br />
    </div>
</div>

<!--Question Form-->
<h2>Ask a Question</h2>

<p>Submit your question below. Each question is answered by missionaries who served in this mission.</p>

<div class="row">
    <div class="col-md-12">
        <form>
            <div class="form-group">
                <label>Name</label>
                <input type="text" class="form-control" placeholder="First name and last initial">
            </div>
            <div class="form-group">
                <label>Your Question</label>
                <input type="text" class="form-control" placeholder="Enter question">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

<br /><br />

<!--FAQs where RMs can reply to questions and others can view past questions-->
<h2>FAQs</h2>
<div id="accordion" role="tablist">
    <div class="card">
        <div class="card-header" role="tab" id="headingOne">
            <!--question-->
            <h5 class="mb-0">
                <a data-toggle="collapse" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    Do I need waterproof shoes?
                </a>
            </h5>
        </div>

        <!--answer-->
        <div id="collapseOne" class="collapse" role="tabpanel" aria-labelledby="headingOne" data-parent="#accordion">
            <div class="card-body">
                Absolutely! They will be a complete lifesaver. I recommend buying the shoes there, though, because they have some really good options for the region.
            </div>
            <br /><br />
            <a class="btn btn-primary" data-toggle="collapse" href="#replyForm1" aria-expanded="false" aria-controls="replyForm1">Reply</a>
            <br />
            <!--Reply Form-->
            <div class="row">
                <div class="col">
                    <div class="collapse multi-collapse" id="replyForm1">
                        <div class="card card-body">
                            <form>
                                <div class="form-group">
                                    <label>Name</label>
                                    <input type="text" class="form-control" placeholder="First name and last initial">
                                </div>
                                <div class="form-group">
                                    <label>Your Answer</label>
                                    <input type="text" class="form-control" placeholder="Enter question">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-header" role="tab" id="headingTwo">
            <!--Question-->
            <h5 class="mb-0">
                <a class="collapsed" data-toggle="collapse" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                    Can I bring my dog?
                </a>
            </h5>
        </div>
        <!--Answer-->
        <div id="collapseTwo" class="collapse" role="tabpanel" aria-labelledby="headingTwo" data-parent="#accordion">
            <div class="card-body">
                Probably not unless you want people to eat it...
            </div>
            <br /><br />
            <a class="btn btn-primary" data-toggle="collapse" href="#replyForm2" aria-expanded="false" aria-controls="replyForm2">Reply</a>
            <br />

            <!--Reply Form-->
            <div class="row">
                <div class="col">
                    <div class="collapse multi-collapse" id="replyForm2">
                        <div class="card card-body">
                            <form>
                                <div class="form-group">
                                    <label>Name</label>
                                    <input type="text" class="form-control" placeholder="First name and last initial">
                                </div>
                                <div class="form-group">
                                    <label>Your Answer</label>
                                    <input type="text" class="form-control" placeholder="Enter question">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>